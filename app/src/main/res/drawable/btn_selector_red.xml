<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="true">
        <shape>
            <gradient android:endColor="@color/red" android:startColor="@color/red" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <gradient android:endColor="@color/gray" android:startColor="@color/gray" />
            <corners android:radius="8dp" />
        </shape>
    </item>


    <item>
        <shape>
            <gradient android:endColor="@color/red_dark" android:startColor="@color/red_dark" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>