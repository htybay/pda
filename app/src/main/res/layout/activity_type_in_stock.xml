<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_buy"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_receive"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="采购"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_not_standard"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_stock"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="不合格"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_back_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="退货"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_change_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="换款"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_check_extra"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_back_stock"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="盘盈"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_retry_check"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="重新质检"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

    </LinearLayout>


</LinearLayout>