<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_buy"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_purchase"
            android:text="采购" />


        <TextView
            android:id="@+id/text_not_standard"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_not_standard"
            android:text="不合格" />

        <TextView
            android:id="@+id/text_back_goods"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_return_goods"
            android:text="退货" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_change_goods"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_change"
            android:text="换款" />

        <TextView
            android:id="@+id/text_check_extra"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_check_extra"
            android:text="盘盈" />


        <TextView
            android:id="@+id/text_retry_check"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_retry_check"
            android:text="重新质检" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_sample_in"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_purchase"
            android:text="样品上架" />


        <TextView
            android:id="@+id/text_return_in"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_purchase"
            android:text="归还上架" />

        <TextView
            style="@style/TextTab" />

    </LinearLayout>


</LinearLayout>