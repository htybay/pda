<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_receive_goods"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_receive"
            android:text="签收" />


        <TextView
            android:id="@+id/text_in_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_type_in"
            android:text="分类入库" />

        <TextView
            android:id="@+id/text_pick_goods"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_pick_goods"
            android:text="拣货" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_delivery_goods"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_delivery"
            android:text="配货" />

        <TextView
            android:id="@+id/text_out_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_back_goos_out"
            android:text="退货出库" />

        <TextView
            android:id="@+id/text_goods_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_goods_stock"
            android:text="物品货位" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_goods_change_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_goods_move"
            android:text="物品移位" />

        <TextView
            android:id="@+id/text_handle_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_goods_move"
            android:text="理库" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>