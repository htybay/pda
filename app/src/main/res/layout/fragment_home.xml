<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_receive_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_receive"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="收货"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_in_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_stock"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="分类入库"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_pick_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="拣货"
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_delivery_goods"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="配货"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_back_stock"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="退货出库"
            android:textColor="@color/color_999"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_goods_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="物品货位"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_goods_change_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_remove"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="物品移位"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="18sp" />

    </LinearLayout>

</LinearLayout>