<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_in_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_in_stock"
            android:text="入库" />

        <TextView
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_out_stock"
            android:text="出库"
            android:textColor="@color/color_999" />


        <TextView
            android:id="@+id/text_goods_move"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_batch_move"
            android:text="物品移位" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_batch_check"
            android:text="囤货盘点"
            android:textColor="@color/color_999" />

        <TextView
            android:id="@+id/text_transfer_add"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_transfer_add"
            android:text="调拨添加" />


        <TextView
            android:id="@+id/text_transfer_pick"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_transfer_pick"
            android:text="调拨拣货" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_transfer_send"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_transfer_send"
            android:text="调拨发货" />

        <TextView
            android:id="@+id/text_transfer_receive"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_transfer_receive"
            android:text="调拨收货" />


        <TextView
            android:id="@+id/text_transfer_in_stock"
            style="@style/TextTab"
            android:drawableTop="@drawable/icon_transfer_in"
            android:text="调拨入库" />

    </LinearLayout>

</LinearLayout>