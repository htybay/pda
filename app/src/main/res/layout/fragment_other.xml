<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_not_standard_stock"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_receive"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="不合格入库"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_lose_pick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_remove"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="拣货丢失"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_internal_pick"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="内部拣货单"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_transfer_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="调拨丢失"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_lose_delivery"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_lose"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="配货丢失"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_lose"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="盘点"
            android:textColor="@color/color_999"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/text_move_up"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="移库上架"
            android:textColor="@color/color_333"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/text_move_down"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="移库下架"
            android:textColor="@color/color_333"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/text_move_lose"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_delivery_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="移库丢失"
            android:textColor="@color/color_999"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="报损"
            android:textColor="@color/color_999"
            android:textSize="18sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableTop="@drawable/icon_pick_goods"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="拣货批次"
            android:textColor="@color/color_999"
            android:textSize="18sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawablePadding="8dp"
            android:gravity="center"
            android:padding="10dp"
            android:textColor="@color/color_999"
            android:textSize="18sp" />


    </LinearLayout>
</LinearLayout>