<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="@color/white"
        android:id="@+id/ll_root">

        <TextView
            android:id="@+id/text_product_num"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="产品编号" />

        <include layout="@layout/view_line_vertical_gray" />


        <TextView
            android:id="@+id/text_color_size"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="颜色尺寸" />

        <include layout="@layout/view_line_vertical_gray" />

        <TextView
            android:id="@+id/text_stock"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="货位信息" />

        <include layout="@layout/view_line_vertical_gray" />

        <TextView
            android:id="@+id/text_delivery_num"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="配货位" />

        <include layout="@layout/view_line_vertical_gray" />

        <TextView
            android:id="@+id/text_status"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="状态" />

        <include layout="@layout/view_line_vertical_gray" />

        <TextView
            android:id="@+id/text_packet"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="包裹号" />
        <include layout="@layout/view_line_vertical_gray" />

        <TextView
            android:id="@+id/text_goods_id"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/color_666"
            android:text="物品号" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="bottom"
        android:background="@color/gray" />
</FrameLayout>