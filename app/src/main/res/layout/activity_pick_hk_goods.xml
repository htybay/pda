<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <include layout="@layout/view_barcode" />

    <LinearLayout style="@style/LinearLayoutCommon">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:text="货框码："
            android:textColor="@color/color_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_hk_num"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            tools:text="jh-4564564" />

        <Button
            android:id="@+id/btn_over"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_selector"
            android:text="拣货完成"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_lose"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="right|center_vertical"
            android:layout_marginRight="15dp"
            android:background="@drawable/btn_selector_red"
            android:text="丢失"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutCommon">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:text="当前货位："
            android:textColor="@color/color_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_stock_current"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            tools:text="4564564" />
    </LinearLayout>

    <LinearLayout style="@style/LinearLayoutCommon">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical|right"
            android:paddingRight="8dp"
            android:text="下一货位："
            android:textColor="@color/color_333"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/text_stock_next"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:textColor="@color/color_333"
            android:textSize="16sp"
            tools:text="4564564" />
    </LinearLayout>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@color/colorAccent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_product_num"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="产品编号"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />


                <TextView
                    android:id="@+id/text_color_size"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="颜色尺寸"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />

                <TextView
                    android:id="@+id/text_stock"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="货位信息"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />

                <TextView
                    android:id="@+id/text_delivery_num"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="配货位"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="状态"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />

                <TextView
                    android:id="@+id/text_packet"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="包裹号"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <include layout="@layout/view_line_vertical_white" />

                <TextView
                    android:id="@+id/text_goods_num"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="物品号"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rlv_pick_goods"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:id="@+id/text_count"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:textColor="@color/color_333"
        android:textSize="16sp"
        android:visibility="gone"
        tools:text="总件数:20 已扫：3 未扫:2  异常:3" />
</LinearLayout>